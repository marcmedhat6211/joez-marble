{% set cr = app.request.attributes.get('_route') %}
{% set currentUser = app.user %}
{% apply spaceless %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% if page_title is defined %}{{ page_title }}{% else %}Admin panel{% endif %}
            | {{ constant('\\App\\Kernel::WEBSITE_TITLE') }}</title>
        {# @TODO: add the favicon  #}
{#         <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />#}
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet"
                  type="text/css">
            <link href="{{ asset('admin/css/icons/fontawesome/styles.min.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('admin/css/icons/icomoon/styles.min.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('admin/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('admin/css/components.min.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('admin/css/all.min.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('admin/css/custom.css') }}" rel="stylesheet" type="text/css">
        {% endblock stylesheets %}
    </head>
    <body>
    {#  HEADER  #}
    {% include 'adminTemplate/_header.html.twig' %}
    {% include 'adminTemplate/_side-menu.html.twig' %}
    {#  END HEADER  #}

    {#  BODY  #}
    {% block content %}{% endblock content %}
    {#  END BODY  #}

    {# SCRIPTS #}
    {% block scripts %}
        <!-- Core JS files -->
        <script src="{{ asset('admin/js/main/jquery.min.js') }}"></script>
        <script src="{{ asset('admin/js/main/bootstrap.bundle.min.js') }}"></script>
        <!-- /core JS files -->

        <!-- Theme JS files -->
        <script type="text/javascript" src="{{ asset('admin/js/app.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/js/custom.js') }}"></script>
        <!-- /theme JS files -->
    {% endblock scripts %}
    {# END SCRIPTS #}
    </body>
    </html>
{% endapply %}
