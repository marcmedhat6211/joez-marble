{% for label, messages in app.flashes %}
    {% set alertBg = 'bg-primary' %}
    {% set title = 'Notice' %}

    {% if label == 'error' %}
        {% set alertBg = 'bg-danger' %}
        {% set title = 'Error!' %}
    {% elseif label == 'warning' %}
        {% set alertBg = 'bg-warning' %}
        {% set title = 'Warning!' %}
    {% elseif label == 'success' %}
        {% set alertBg = 'bg-success' %}
        {% set title = 'Success!' %}
    {% endif %}

    {% for message in messages %}
        <div class="alert {{ alertBg }} text-white alert-styled-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
            <span class="font-weight-semibold">{{ title }}</span> {{ message }}
        </div>
    {% endfor %}
{% endfor %}