{% extends 'fe/base.html.twig' %}
{% block title %}{{ 'about_us_page_txt'|trans }}{% endblock %}

{% block content %}

<div id="bg_image_page">
    <div id="contact_us_box" class="w-75">
        <div class="row w-100 align-items-center">
            <div class="col-12 col-md-4">
                <div class="contact-info-container">
                    {# @todo: add dc #}
                    <div class="contact-info">
                        <i class="convert-svg" data-src="{{ asset('images/icons/phone.svg') }}"></i>
                        <span class="info-text phone-number">+201221155167</span>
                    </div>
                    {# @todo: add dc #}
                    <div class="contact-info">
                        <i class="convert-svg" data-src="{{ asset('images/icons/at.svg') }}"></i>
                        <span class="info-text email">contact@joezdesigns.com</span>
                    </div>
                    {# @todo: add dc #}
                    <div class="contact-info">
                        <i class="convert-svg" data-src="{{ asset('images/icons/map-pin.svg') }}"></i>
                        <span class="info-text location"
                        >Lorem Ipsum lorem ipsum</span
                        >
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="w-100" id="map"></div>
            </div>
            <div class="col-12 col-md-4">
                    {{ form_start(contact_form, {'attr':{ "class": "contact-form", "id":"contact_form" } }) }}
                    <h5 class="form-title">{{ 'leave_msg_txt'|trans }}</h5>
                    <div class="form-group input-style-2 w-100">
                        {{ form_widget(contact_form.name) }}
                        {{ form_errors(contact_form.name) }}
                    </div>
                    <div class="form-group input-style-2 w-100">
                        {{ form_widget(contact_form.email) }}
                        {{ form_errors(contact_form.email) }}
                    </div>
                    <div class="form-group input-style-2 w-100">
                        {{ form_widget(contact_form.message) }}
                        {{ form_errors(contact_form.message) }}
                    </div>
                    <button type="submit" class="btn btn-style-1 hover-effect border-light w-100">
                        {{ 'send_message_txt'|trans }}
                    </button>
                {{ form_end(contact_form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBXeiyxgCP8IYv88TMfUC5VQXjO5UrfUt4&callback=initMap&libraries=&v=weekly" async></script>
    <script src="{{ asset('js/pages/contact-us.js') }}"></script>
{% endblock %}