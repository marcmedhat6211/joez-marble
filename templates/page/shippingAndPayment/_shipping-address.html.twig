<h2 class="section-title">{{ 'add_shipping_address_txt'|trans }}</h2>
<form class="section-box" action="#" id="address_form">
    <div class="row">
        <div class="col-12 col-md-4 mb-4 mb-md-0">
            <div class="row">
                <div class="col-12">
                    <div class="form-group input-style-3 w-100">
                        <input
                                type="text"
                                class="form-control"
                                name="company-name"
                                placeholder="{{ 'company_name_txt'|trans }}"
                                autocomplete="off"
                        />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group input-style-3 w-100">
                        <input
                                type="text"
                                class="form-control"
                                name="first-name"
                                placeholder="{{ 'first_name_txt'|trans }}"
                                required
                                autocomplete="off"
                        />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group input-style-3 w-100">
                        <input
                                type="text"
                                class="form-control"
                                name="last-name"
                                placeholder="{{ 'last_name_txt'|trans }}"
                                required
                                autocomplete="off"
                        />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group input-style-3 w-100">
                        <input
                                type="text"
                                class="form-control"
                                name="mobile-number"
                                placeholder="{{ 'mobile_number_txt'|trans }}"
                                required
                                autocomplete="off"
                        />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group input-style-3 w-100">
                        <input
                                type="text"
                                class="form-control"
                                name="address"
                                placeholder="{{ 'address_txt'|trans }}"
                                required
                                autocomplete="off"
                        />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group input-style-3 w-100">
                        <input
                                type="text"
                                class="form-control"
                                name="district"
                                placeholder="{{ 'district_txt'|trans }}"
                                required
                                autocomplete="off"
                        />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group input-style-3 w-100">
                        <input
                                type="text"
                                class="form-control"
                                name="address-name"
                                placeholder="{{ 'address_name_txt'|trans }}"
                                required
                                autocomplete="off"
                        />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 offset-md-2">
            <div id="shipping_details_container">
                <h6 class="shipping-details-title">{{ 'ship_to_txt'|trans }}</h6>
                <p class="company-name detail-info">{{ 'company_name_txt'|trans }}</p>
                <p class="name detail-info">
                    <span class="first-name">{{ 'first_name_txt'|trans }}</span>
                    <span class="last-name">{{ 'last_name_txt'|trans }}</span>
                </p>
                <p class="address-name detail-info">{{ 'address_name_txt'|trans }}</p>
                <p class="mobile-number detail-info">{{ 'mobile_number_txt'|trans }}</p>
                <p class="address detail-info">{{ 'address_txt'|trans }}</p>
                <p class="district detail-info">{{ 'district_txt'|trans }}</p>
                <div class="btns-container">
                    <button type="submit" class="btn btn-style-1 thick-border w-25">
                        {{ 'save_txt'|trans }}
                    </button>
                    <button type="button" class="btn btn-style-1 thick-border w-25">
                        {{ 'schedule_delivery_txt'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>