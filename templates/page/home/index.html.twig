                        {% endif %}
                        {% if midPageSmallBannerTwo %}
                            {% set midPageSmallBannerTwoImage = 'images/placeholders/placeholder-lg.jpg' %}
                            {% if midPageSmallBannerTwo.image %}
                                {% set midPageSmallBannerTwoImage = absolute_url(asset(midPageSmallBannerTwo.image.absolutePath)) %}
                            {% endif %}
                            <div class="col-4 mb-4 mb-md-5">
                                <a href="{{ midPageSmallBannerTwo.url ? midPageSmallBannerTwo.url : '#' }}" {{ midPageSmallBannerTwo.openNewTab ? 'target="_blank"' }}
                                   class="img-link thumb-img w-100">
                                    <img
                                            class="lazy w-100 h-100"
                                            data-src="{{ midPageSmallBannerTwoImage }}"
                                            alt="{{ midPageSmallBannerTwo.title }}"
                                    />
                                </a>
                            </div>
                        {% endif %}
                        {% if midPageSmallBannerThree %}
                            {% set midPageSmallBannerThreeImage = 'images/placeholders/placeholder-lg.jpg' %}
                            {% if midPageSmallBannerThree.image %}
                                {% set midPageSmallBannerThreeImage = absolute_url(asset(midPageSmallBannerThree.image.absolutePath)) %}
                            {% endif %}
                            <div class="col-4 mb-4 mb-md-5">
                                <a href="{{ midPageSmallBannerThree.url ? midPageSmallBannerThree.url : '#' }}" {{ midPageSmallBannerThree.openNewTab ? 'target="_blank"' }}
                                   class="img-link thumb-img w-100">
                                    <img
                                            class="lazy w-100 h-100"
                                            data-src="{{ midPageSmallBannerThreeImage }}"
                                            alt="{{ midPageSmallBannerThree.title }}"
                                    />
                                </a>
                            </div>
                        {% endif %}
                        {% if midPageLeftBanner %}
                            {% set midPageLeftBannerImage = 'images/placeholders/placeholder-lg.jpg' %}
                            {% if midPageLeftBanner.image %}
                                {% set midPageLeftBannerImage = absolute_url(asset(midPageLeftBanner.image.absolutePath)) %}
                            {% endif %}
                            <div class="col-8">
                                <a href="{{ midPageLeftBanner.url ? midPageLeftBanner.url : '#' }}" {{ midPageLeftBanner.openNewTab ? 'target="_blank"' }}
                                   class="img-link main-img w-100">
                                    <img
                                            class="lazy w-100 h-100"
                                            data-src="{{ midPageLeftBannerImage }}"
                                            alt="{{ midPageLeftBanner.title }}"
                                    />
                                </a>
                            </div>
                        {% endif %}
                        {% if midPageRightSmallBannerOne or midPageRightSmallBannerTwo %}
                            <div class="col-4 h-100">
                                {% if midPageRightSmallBannerOne %}
                                    {% set midPageRightSmallBannerOneImage = 'images/placeholders/placeholder-lg.jpg' %}
                                    {% if midPageRightSmallBannerOne.image %}
                                        {% set midPageRightSmallBannerOneImage = absolute_url(asset(midPageRightSmallBannerOne.image.absolutePath)) %}
                                    {% endif %}
                                    <a href="{{ midPageRightSmallBannerOne.url ? midPageRightSmallBannerOne.url : '#' }}" {{ midPageRightSmallBannerOne.openNewTab ? 'target="_blank"' }}
                                       class="img-link thumb-thumb-img w-100">
                                        <img
                                                class="lazy w-100 h-100"
                                                data-src="{{ midPageRightSmallBannerOneImage }}"
                                                alt="{{ midPageRightSmallBannerOne.title }}"
                                        />
                                    </a>
                                {% endif %}
                                {% if midPageRightSmallBannerTwo %}
                                    {% set midPageRightSmallBannerTwoImage = 'images/placeholders/placeholder-lg.jpg' %}
                                    {% if midPageRightSmallBannerTwo.image %}
                                        {% set midPageRightSmallBannerTwoImage = absolute_url(asset(midPageRightSmallBannerTwo.image.absolutePath)) %}
                                    {% endif %}
                                    <a href="{{ midPageRightSmallBannerTwo.url ? midPageRightSmallBannerTwo.url : '#' }}" {{ midPageRightSmallBannerTwo.openNewTab ? 'target="_blank"' }}
                                       class="img-link thumb-thumb-img w-100">
                                        <img
                                                class="lazy w-100 h-100"
                                                data-src="{{ midPageRightSmallBannerTwoImage }}"
                                                alt="{{ midPageRightSmallBannerTwo.title }}"
                                        />
                                    </a>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </section>
            <hr class="line"/>
        {% endif %}
        {# END MID PAGE BANNERS SECTION #}

        {# LIVING BANNER #}
        {% if midPageLivingBanner %}
            {% set midPageLivingBannerImage = 'images/placeholders/placeholder-lg.jpg' %}
            {% if midPageLivingBanner.image %}
                {% set midPageLivingBannerImage = absolute_url(asset(midPageLivingBanner.image.absolutePath)) %}
            {% endif %}
            <div class="container">
                <section class="living-section">
                    <div class="logo-container">
                        <img
                                class="lazy"
                                data-src="{{ midPageLivingBannerImage }}"
                                alt="{{ midPageLivingBanner.title }}"
                        />
                    </div>
                    <div class="section-text-container">
                        <h5 class="section-title">{{ midPageLivingBanner.title }}</h5>
                        {% if midPageLivingBanner.text %}
                            <p class="section-description">
                                {{ midPageLivingBanner.text }}
                            </p>
                        {% endif %}
                        {% if midPageLivingBanner.url %}
                            <a href="{{ midPageLivingBanner.url }}"
                               class="btn btn-style-1">{{ midPageLivingBanner.actionButtonText ? midPageLivingBanner.actionButtonText : 'explore_txt'|trans }}</a>
                        {% endif %}
                    </div>
                </section>
            </div>
        {% endif %}
        {# END LIVING BANNER #}

        {# CATEGORY BANNERS SECTION #}
        {% if categoryBannerOne or categoryBannerTwo %}
            <section class="featured-products-section">
                <div class="container">
                    {% if categoryBannerOne %}
                        {% set categoryBannerOneImage = 'images/placeholders/placeholder-lg.jpg' %}
                        {% if categoryBannerOne.image %}
                            {% set categoryBannerOneImage = absolute_url(asset(categoryBannerOne.image.absolutePath)) %}
                        {% endif %}
                        <div class="row">
                            <div class="col-12 col-md-6 mb-4 mb-md-5">
                                <a href="{{ categoryBannerOne.url ? categoryBannerOne.url : '#' }}" {{ categoryBannerOne.openNewTab ? 'target="_blank"' }}
                                   class="section-img w-100">
                                    <img
                                            class="lazy w-100 h-100"
                                            data-src="{{ categoryBannerOneImage }}"
                                            alt="{{ categoryBannerOne.title }}"
                                    />
                                </a>
                            </div>
                            <div class="col-12 col-md-6 mb-4 mb-md-5">
                                <h6 class="section-title">{{ categoryBannerOne.title }}</h6>
                                {% if categoryBannerOne.text %}
                                    <p class="section-description mb-0">
                                        {{ categoryBannerOne.text }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                    {% if categoryBannerTwo %}
                        {% set categoryBannerTwoImage = 'images/placeholders/placeholder-lg.jpg' %}
                        {% if categoryBannerTwo.image %}
                            {% set categoryBannerTwoImage = absolute_url(asset(categoryBannerTwo.image.absolutePath)) %}
                        {% endif %}
                        <div class="row">
                            <div class="col-12 col-md-6 mb-4 mb-md-5">
                                <h6 class="section-title">{{ categoryBannerTwo.title }}</h6>
                                {% if categoryBannerTwo.text %}
                                    <p class="section-description mb-0">
                                        {{ categoryBannerTwo.text }}
                                    </p>
                                {% endif %}
                            </div>
                            <div class="col-12 col-md-6 mb-4 mb-md-5">
                                <a href="{{ categoryBannerTwo.url ? categoryBannerTwo.url : '#' }}" {{ categoryBannerTwo.openNewTab ? 'target="_blank"' }}
                                   class="section-img w-100">
                                    <img
                                            class="lazy w-100 h-100"
                                            data-src="{{ categoryBannerTwoImage }}"
                                            alt="{{ categoryBannerTwo.title }}"
                                    />
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </section>
            <hr class="line"/>
        {% endif %}
        {# END CATEGORY BANNERS SECTION #}

        {# WHY CHOOSE US SECTION #}
        <div class="container">
            <section class="why-us-section">
                <!-- section column -->
                <div class="section-column">
                    <h6 class="column-title">{{ 'attention_to_details_txt'|trans }}</h6>
                    <lord-icon
