                            {% endif %}
                            <div class="col-4 mb-4 mb-md-5">
                                <a href="{{ midPageSmallBannerOne.url ? midPageSmallBannerOne.url : '#' }}" {{ midPageSmallBannerOne.openNewTab ? 'target="_blank"' }}
                                   class="img-link thumb-img w-100">
                                    <img
                                            class="lazy w-100 h-100"
                                            data-src="{{ midPageSmallBannerOneImage }}"
                                            alt="{{ midPageSmallBannerOne.title }}"
