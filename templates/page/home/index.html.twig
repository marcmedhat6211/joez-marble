                <!-- section column -->
                <div class="section-column">
                    <h6 class="column-title">{{ 'worldwide_txt'|trans }}</h6>
                    <lord-icon
                            src="{{ asset('https://cdn.lordicon.com/gqzfzudq.json') }}"
                            trigger="loop"
                            delay="1000"
                            colors="primary:#121331,secondary:#4f1091"
                            style="width: 100px; height: 100px"
