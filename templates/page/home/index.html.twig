                    <div class="row">
                        {% if midPageBigBanner %}
                            {% set midPageBigBannerImage = 'images/placeholders/placeholder-lg.jpg' %}
                            {% if midPageBigBanner.image %}
                                {% set midPageBigBannerImage = absolute_url(asset(midPageBigBanner.image.absolutePath)) %}
                            {% endif %}
                            <div class="col-12 mb-4 mb-md-5">
                                <a href="{{ midPageBigBanner.url ? midPageBigBanner.url : '#' }}" {{ midPageBigBanner.openNewTab ? 'target="_blank"' }}
                                   class="img-link main-img w-100">
                                    <img
                                            class="lazy w-100 h-100"
                                            data-src="{{ midPageBigBannerImage }}"
                                            alt="{{ midPageBigBanner.title }}"
                                    />
                                </a>
                            </div>
