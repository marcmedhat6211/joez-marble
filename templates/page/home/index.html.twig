{% extends 'fe/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('vendors/swiper/swiper.css') }}"/>
{% endblock %}

{% block content %}

    <div id="home_page_container">
        {# MAIN BANNER SECTION #}
        {% if mainBanners is not empty %}
            <section class="banner-section">
                <div class="swiper-container banner-swiper">
                    <div class="banner-slider-scrollbar">
                        <div class="scrollbar"></div>
                    </div>
                    <div class="swiper-wrapper">
                        {% for banner in mainBanners %}
                            {% set mainBannerImage = asset('images/placeholders/placeholder-lg.jpg') %}
                            {% if banner.image %}
                                {% set mainBannerImage = absolute_url(asset(banner.image.absolutePath)) %}
                            {% endif %}
                            <div class="swiper-slide">
                                <div class="banner-container">
                                    <img
                                            class="swiper-lazy banner-img"
                                            data-src="{{ mainBannerImage }}"
                                            alt="{{ banner.title }}"
                                    />
                                    <div class="banner-text-container">
                                        {% if banner.title %}
                                            <h5 class="banner-title">
                                                {{ banner.title }}
                                            </h5>
                                        {% endif %}
                                        {% if banner.text %}
                                            <p class="banner-description">
                                                {{ banner.text }}
                                            </p>
                                        {% endif %}
                                        {% if banner.url %}
                                            <a href="{{ banner.url }}"
                                               class="btn btn-style-6" {{ banner.openNewTab ? 'target="_blank"' }}>{{ banner.actionButtonText ? banner.actionButtonText : 'View' }}</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </section>
        {% endif %}
        {# END MAIN BANNER SECTION #}

        {# COLLECTION BANNERS SECTION #}
        {% if collectionBannerOne or collectionBannerTwo or collectionBannerThree %}
            <section class="images-collections-section">
                {% if collectionBannerOne %}
                    {% set collectionBannerOneImage = 'images/placeholders/placeholder-lg.jpg' %}
                    {% if collectionBannerOne.image %}
                        {% set collectionBannerOneImage = absolute_url(asset(collectionBannerOne.image.absolutePath)) %}
                    {% endif %}
                    <a href="{{ collectionBannerOne.url ? collectionBannerOne.url : '#' }}" {{ collectionBannerOne.openNewTab ? 'target="_blank"' }}
                       class="img-collection-link w-100">
                        <img
                                class="lazy w-100 h-100"
                                data-src="{{ collectionBannerOneImage }}"
                                alt="{{ collectionBannerOne.title }}"
                        />
                    </a>
                {% endif %}
                {% if collectionBannerTwo %}
                    {% set collectionBannerTwoImage = 'images/placeholders/placeholder-lg.jpg' %}
                    {% if collectionBannerTwo.image %}
                        {% set collectionBannerTwoImage = absolute_url(asset(collectionBannerTwo.image.absolutePath)) %}
                    {% endif %}
                    <a href="{{ collectionBannerTwo.url ? collectionBannerTwo.url : '#' }}" {{ collectionBannerTwo.openNewTab ? 'target="_blank"' }}
                       class="img-collection-link w-100">
                        <img
                                class="lazy w-100 h-100"
                                data-src="{{ collectionBannerTwoImage }}"
                                alt="{{ collectionBannerTwo.title }}"
                        />
                    </a>
                {% endif %}
                {% if collectionBannerThree %}
                    {% set collectionBannerThreeImage = 'images/placeholders/placeholder-lg.jpg' %}
                    {% if collectionBannerThree.image %}
                        {% set collectionBannerThreeImage = absolute_url(asset(collectionBannerThree.image.absolutePath)) %}
                    {% endif %}
                    <a href="{{ collectionBannerThree.url ? collectionBannerThree.url : '#' }}" {{ collectionBannerThree.openNewTab ? 'target="_blank"' }}
                       class="img-collection-link w-100">
                        <img
                                class="lazy w-100 h-100"
                                data-src="{{ collectionBannerThreeImage }}"
                                alt="{{ collectionBannerThree.title }}"
                        />
                    </a>
                {% endif %}
            </section>
        {% endif %}
        {# END COLLECTION BANNERS SECTION #}

        {# MID PAGE BANNERS SECTION #}
