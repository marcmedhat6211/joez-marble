                <!-- section column -->
                <div class="section-column">
                    <h6 class="column-title">{{ 'handmade_txt'|trans }}</h6>
                    <lord-icon
                            src="{{ asset('https://cdn.lordicon.com/rqqkvjqf.json') }}"
                            trigger="loop"
                            colors="primary:#121331,secondary:#4f1091"
                            style="width: 100px; height: 100px"
                    >
                    </lord-icon>
                    {# @todo: add dc #}
                    <p class="mb-0 column-description text-center">
