        {# END WHY CHOOSE US SECTION #}

        {# TESTIMONIALS SECTION #}

        <section class="reviews-section">
            <div class="container-fluid">
                {% if testimonials is not empty %}
                    <h5 class="page-title text-center">{{ 'testimonials_title_txt'|trans }}</h5>
                    <div class="container">
                        <div class="swiper-container reviews-swiper">
                            <div class="swiper-wrapper">
                                {% for testimonial in testimonials %}
                                    {% set testimonialImage = asset('images/placeholders/placeholder-md.jpg') %}
                                    {% if testimonial.image %}
                                        {% set testimonialImage = absolute_url(asset(testimonial.image.absolutePath)) %}
                                    {% endif %}
                                    <div class="swiper-slide">
                                        <div class="card card-style-2">
                                            <div class="img-container">
                                                <img
                                                        class="lazy"
                                                        data-src="{{ testimonialImage }}"
                                                        alt="{{ testimonial.client }}"
                                                />
                                            </div>
