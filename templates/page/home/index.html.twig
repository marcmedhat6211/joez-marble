                <!-- section column -->
                <div class="section-column">
                    <h6 class="column-title">{{ 'craftsmanship_txt'|trans }}</h6>
                    <lord-icon
                            src="{{ asset('https://cdn.lordicon.com/sbiheqdr.json') }}"
                            trigger="loop"
                            delay="1000"
