{% import 'fe/_macros.html.twig' as macros %}
<header>
    <div id="desktop_header" class="d-none d-md-block">
        <!-- HEADER PART ONE -->
        <div id="header_part_one">
            <div class="header-one-content">
                <a href="{{ path('fe_filter_designs_product_sale') }}"
                   class="header-one-link">{{ 'sales_caps_txt'|trans }}</a>
                <a href="{{ path('fe_service_index') }}" class="header-one-link">{{ 'free_services_caps_txt'|trans }}</a>
                <a href="{{ path('fe_filter_designs_product_new_arrival') }}"
                   class="header-one-link">{{ 'new_arrivals_txt'|trans }}</a>
            </div>
        </div>
        <!-- END HEADER PART ONE -->
        <!-- HEADER PART TWO -->
        <div id="header_part_two">
            <!-- quick access links section -->
            <div class="quick-access-links-container">
                <div class="pages-links">
                    <a href="{{ path('fe_filter_designs_product') }}"
                       class="quick-access-link active">{{ 'joez_designs_txt'|trans }}</a>
                    <a href="{{ path('fe_filter_living_product') }}"
                       class="quick-access-link">{{ 'joez_living_txt'|trans }}</a>
                </div>
                <button
                        class="btn country-btn"
                        id="country_btn"
                        data-toggle="modal"
                        data-target="#shopAndShipModal"
                >
                    {% set flag = null %}
                    {% if currency.code == "EGP" %}
                        {% set flag = asset('admin/images/flags/eg.png') %}
                    {% elseif currency.flag and currency.code != "EGP" %}
                        {% set flag = absolute_url(asset(currency.flag.absolutePath)) %}
                    {% endif %}
                    <img
                            class="lazy"
                            data-src="{{ flag }}"
                            alt="Shop and Ship"
                    />
                </button>
            </div>
            <!-- end quick access links section -->
            <!-- main header -->
            <div class="main-header">
                <form action="#" id="desktop_search_form" data-link="{{ path('fe_search_ajax') }}">
                    <div class="input-container">
                        <input
                                class="form-control"
                                type="text"
                                placeholder="{{ 'what_can_we_help_with_qs_txt'|trans }}"
                        />
                        <i class="convert-svg search-icon"
                           data-src="{{ asset('images/icons/magnifying-glass.svg') }}"></i>
                    </div>
                    <div
                            id="website_search_dropdown"
                            class="website-sreach-dropdown"
                    >
                        <ul class="m-0 p-0">
                            <!-- search result item -->
                            <li>
                                <a href="#" class="search-result__link">
                                    <div class="img-container">
                                        <img src="https://via.placeholder.com/100x100" alt="" loading="lazy"/>
                                    </div>
                                    <span class="result__title">Product One</span>
                                </a>
                            </li>
                            <!-- end search result item -->
                        </ul>
                    </div>
                </form>
                <a href="{{ path('fe_home') }}" class="desktop-logo-container">
                    <img
                            class="lazy"
                            data-src="{{ asset('images/header-logo.jpg') }}"
                            alt="{{ 'joez_designs_txt'|trans }}"
                    />
                </a>
                <div class="desktop-icons-container">
                    <div class="icon-container">
                        <button
                                type="button"
                                class="btn icon-btn"
                                id="desktop_user_button"
                        >
                            <div class="icon">
                                <i class="convert-svg" data-src="{{ asset('images/icons/user.svg') }}"></i>
                            </div>
                        </button>
                        <div
                                class="profile-dropdown-container icon-dropdown"
                                id="desktop_profile_dropdown"
                        >
                            {% if app.user %}
                                <p class="dropdown-title">{{ 'hi_txt'|trans }} {{ app.user.fullName }}</p>
                                <a
                                        href=""
                                        class="profile-dropdown-link"
                                        data-toggle="modal"
                                        data-target="#editProfileModal">{{ 'edit_profile_txt'|trans }}
                                </a>
                                <a href="{{ path('fe_order_index') }}"
                                   class="profile-dropdown-link">{{ 'my_orders_txt'|trans }}</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('dashboard') }}" target="_blank"
                                       class="profile-dropdown-link">{{ 'manage_website_txt'|trans }}</a>
                                {% endif %}
                                <a href="{{ path('app_user_logout') }}"
                                   class="profile-dropdown-link">{{ 'sign_out_txt'|trans }}</a>
                            {% else %}
                                <p class="dropdown-title">{{ 'welcome_to_joez_designs_txt'|trans }}</p>
                                <a href="{{ path('app_user_login') }}"
                                   class="profile-dropdown-link">{{ 'sign_in_txt'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="icon-container">
                        <a
                                href="{{ path('fe_wishlist') }}"
                                class="icon-btn"
                                id="desktop_wishlist_button"
                        >
                            <div class="icon">
                                <i
                                        class="convert-svg"
                                        data-src="{{ asset('images/icons/heart.svg') }}"
                                ></i>
                            </div>
                            <span class="items-count" id="desktop_wishlist_items_count">{{ wishlistCount }}</span>
                        </a>
                    </div>
                    <div class="icon-container">
                        {% set cartTotalQuantity = 0 %}
                        {% if app.user and cart %}
                            {% set cartTotalQuantity = cart.totalQuantity %}
                        {% endif %}
                        <button
                                type="button"
                                class="btn icon-btn"
                                id="desktop_cart_button"
                        >
                            <div class="icon">
                                <i class="convert-svg" data-src="{{ asset('images/icons/cart.svg') }}"></i>
                            </div>
                            <span class="items-count" id="desktop_cart_items_count">{{ cartTotalQuantity }}</span>
                        </button>
                        <div
                                class="items-dropdown icon-dropdown"
                                id="desktop_cart_dropdown"
                        >
                            <div class="items-container">
                                {% if app.user and cart %}
                                    {% for item in cart.cartItems %}
                                        {{ macros.cartItem(item) }}
                                    {% endfor %}
                                {% else %}
                                    <p class="desktop-cart-empty-txt">{{ 'cart_empty_txt'|trans }}</p>
                                {% endif %}
                            </div>
                            <div class="dropdown-btn-container d-flex justify-content-center align-items-center">
                                <a href="{{ path('fe_cart') }}"
                                   class="btn btn-style-1 hover-effect">{{ 'view_cart_txt'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end main header -->
        </div>
        <!-- END HEADER PART TWO -->
        <!-- HEADER PART THREE -->
        <div id="header_part_three">
            <ul class="header-three-items-container">
                <li class="header-three-item">
                    <a href="{{ path('fe_gift_index') }}" class="item-text">Create your own gift</a>
                </li>
                {# @todo: make sure of the case if the category is 'living' category #}
                {% for category in categories %}
                    {% set subcategoryLink = "fe_filter_designs_subcategory" %}
                    {% if category.living %}
                        {% set subcategoryLink = "fe_filter_living_show" %}
                    {% endif %}
                    <li class="header-three-item">
                        <span class="item-text">{{ category.title }}</span>
                        <div class="header-three-dropdown">
                            <div class="dropdown-links-container">
                                {% for subcategory in category.subcategories %}
                                    <a href="{{ path(subcategoryLink, {"slug": subcategory.seo.slug}) }}"
                                       class="link">{{ subcategory.title }}</a>
                                {% endfor %}
                                {% if not category.living %}
                                    <a href="{{ path('fe_filter_designs_category', {"slug": category.seo.slug}) }}"
                                       class="link underlined">{{ 'see_all_category_txt'|trans({"%categoryTitle%": category.title}) }}</a>
                                {% endif %}
                            </div>
                            <div class="dropdown-imgs-links-container">
                                {% set headerImageOne = asset('images/placeholders/placeholder-md.jpg') %}
                                {% set headerImageTwo = asset('images/placeholders/placeholder-md.jpg') %}
                                {% if category.headerImageOne %}
                                    {% set headerImageOne = absolute_url(asset(category.headerImageOne.absolutePath)) %}
                                {% endif %}
                                {% if category.headerImageTwo %}
                                    {% set headerImageTwo = absolute_url(asset(category.headerImageTwo.absolutePath)) %}
                                {% endif %}
                                <div class="img-link">
                                    <img class="lazy" data-src="{{ headerImageOne }}" alt="{{ category.title }}"/>
                                </div>
                                <div class="img-link">
                                    <img class="lazy" data-src="{{ headerImageTwo }}" alt="{{ category.title }}"/>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <!-- END HEADER PART THREE -->
    </div>
    <!-- mobile header -->
    <div id="mobile_header" class="d-flex d-md-none">
        <button type="button" id="mobile_menu_btn" class="btn">
            <i class="convert-svg" data-src="{{ asset('images/icons/mobile-menu.svg') }}"></i>
        </button>
        <a href="{{ path('fe_home') }}" class="mobile-logo">
            {# @todo: add right logo #}
            <img
                    class="lazy"
                    data-src="{{ asset('images/logo.jpg') }}"
                    alt="{{ 'joez_designs_txt'|trans }}"
            />
        </a>
        <div class="mobile-icons-container">
            <button
                    type="button"
                    class="btn mobile-icon-btn search-icon"
                    id="mobile_search_btn"
            >
                <i class="convert-svg" data-src="{{ asset('images/icons/magnifying-glass.svg') }}"></i>
            </button>
            <button
                    type="button"
                    class="btn mobile-icon-btn"
                    id="mobile_cart_btn"
            >
                <i class="convert-svg" data-src="{{ asset('images/icons/cart.svg') }}"></i>
            </button>
        </div>
        <form action="#" id="mobile_cart" class="mobile-cart">
            <div class="title-container">
                <h3 class="cart-title">{{ 'your_cart_txt'|trans }}</h3>
            </div>
            <!-- cart items -->
            <div class="items-container">
                {% if app.user and cart %}
                    {% for item in cart.cartItems %}
                        {{ macros.mobileCartItem(item) }}
                    {% endfor %}
                {% else %}
                    <p class="mobile-cart-empty-txt">{{ 'cart_empty_txt'|trans }}</p>
                {% endif %}
            </div>
            <!-- end cart items -->
            <button type="button" id="close_cart_btn" class="btn close-cart-btn">
                <i class="convert-svg" data-src="{{ asset('images/icons/x.svg') }}"></i>
            </button>
            {% if app.user %}
                <a href="{{ path('fe_cart') }}" class="btn btn-style-1 w-100">{{ 'view_cart_txt'|trans }}</a>
            {% endif %}
        </form>
    </div>
    <!-- end mobile header -->
</header>