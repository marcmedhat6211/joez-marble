{{ form_start(form, {'attr':{"data-toggle":"validator", 'novalidate':'novalidate'}}) }}
<div class="row">
    <div class="col-12 col-md-6">
        <div class="form-group">
            {{ form_label(form.client) }}
            {{ form_widget(form.client) }}
            {{ form_errors(form.client) }}
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-group">
            {{ form_label(form.sortNo) }}
            {{ form_widget(form.sortNo) }}
            {{ form_errors(form.sortNo) }}
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-group">
            {{ form_label(form.url) }}
            {{ form_widget(form.url) }}
            {{ form_errors(form.url) }}
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message) }}
            {{ form_errors(form.message) }}
        </div>
    </div>
    <div class="col-12 col-md-6 mb-3">
        <div class="form-group">
            {{ form_label(form.socialMediaType) }}
            {{ form_widget(form.socialMediaType) }}
            {{ form_errors(form.socialMediaType) }}
        </div>
    </div>
    <div class="col-12 col-md-6 mb-3">
        <div class="form-group">
            <div class="media mt-0">
                {% if testimonial.image %}
                    <div class="mr-3">
                        <a href="{{ absolute_url(asset(testimonial.image.absolutePath)) }}" data-popup="lightbox">
                            <img src="{{ absolute_url(asset(testimonial.image.absolutePath)) }}" width="60" height="60" class="rounded-pill" alt="{{ testimonial.client }}">
                        </a>
                    </div>
                {% endif %}

                <div class="media-body">
                    <div class="custom-file">
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image) }}
                        {{ form_errors(form.image) }}
                    </div>
                    <span class="form-text text-muted">Size: 165 px x 165 px</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="custom-control custom-switch custom-switch-square custom-control-success mb-2">
            {{ form_widget(form.publish) }}
            {{ form_label(form.publish) }}
            {{ form_errors(form.publish) }}
        </div>
    </div>
</div>
<div class="text-right">
    <button type="submit" class="btn btn-primary">Submit form <i class="icon-paperplane ml-2"></i></button>
</div>
{{ form_end(form) }}