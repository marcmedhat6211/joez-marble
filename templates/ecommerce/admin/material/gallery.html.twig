{% set cr = app.request.attributes.get('_route') %}
{% extends 'adminTemplate/base.html.twig' %}
{% set page_title %}Material Gallery{% endset %}
{% block breadcrumb %}
    <a href="{{ path('dashboard') }}" class="breadcrumb-item">
        <i class="icon-home2 mr-2"></i>
        Dashboard
    </a>
    <a href="{{ path('material_index') }}" class="breadcrumb-item">
        Materials List
    </a>
    <a href="{{ path('material_edit', {"id": material.id}) }}" class="breadcrumb-item">
        {{ material.title }}
    </a>
    <span class="breadcrumb-item active">{{ material.title }}'s Gallery Images</span>
{% endblock %}
{% block content %}

    {{ form_start(form, {'attr':{"data-toggle":"validator", 'novalidate':'novalidate'}}) }}
    <div class="col-12 my-4">
        {{ form_label(form.galleryImages) }}
        {{ form_widget(form.galleryImages) }}
        <span class="form-text text-muted"></span>
    </div>
    {{ form_end(form) }}

{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('admin/js/plugins/uploaders/fileinput/plugins/sortable.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('admin/js/plugins/uploaders/fileinput/fileinput.min.js') }}"></script>
{% endblock scripts %}