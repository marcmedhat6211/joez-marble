{% extends 'adminTemplate/base.html.twig' %}
{% set page_title %}Materials List{% endset %}
{% block breadcrumb %}
    <a href="{{ path('dashboard') }}" class="breadcrumb-item">
        <i class="icon-home2 mr-2"></i>
        Dashboard
    </a>
    <span class="breadcrumb-item active">Materials List</span>
{% endblock %}
{% block content %}
    <div class="card">
        <div class="px-2 pt-2">
            {% include 'adminTemplate/_flash-messages.html.twig' %}
        </div>
        <div class="card-header d-flex justify-content-end">
            <a href="{{ path('material_new') }}" class="btn btn-primary"><i class="icon-plus-circle2 mr-2"></i>Add
                Material</a>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Main Image</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if paginator is not empty %}
                    {% for material in paginator %}
                        <tr>
                            <td>{{ material.id }}</td>
                            <td>{{ material.title }}</td>
                            <td>
                                {% if material.mainImage %}
                                    <img src="{{ absolute_url(asset(material.mainImage.absolutePath)) }}" style="width: 60px; height: 60px; object-fit: cover" />
                                {% else %}
                                    n/a
                                {% endif %}
                            </td>
                            <td>{{ material.created|date('d/m/Y') }}</td>
                            <td class="text-center">
                                <div class="list-icons">
                                    <div class="dropdown">
                                        <a href="#" class="list-icons-item" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>

                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="{{ path('material_edit', {"id": material.id}) }}"
                                               class="dropdown-item"><i class="mi-mode-edit"></i>Edit</a>
                                            <a href="{{ path('material_delete', {"id": material.id}) }}"
                                               onclick="return confirm('Are you sure you want to remove this material ?')"
                                               class="dropdown-item"><i class="mi-delete-forever"></i>Delete</a>
                                            <a href="{{ path('material_gallery_images', {"id": material.id}) }}"
                                               class="dropdown-item"><i class="icon-images2"></i>Gallery Images</a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center py-3">
            {{ knp_pagination_render(paginator) }}
        </div>
    </div>
{% endblock %}