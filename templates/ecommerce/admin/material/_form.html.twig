{{ form_start(form, {'attr':{"data-toggle":"validator", 'novalidate':'novalidate'}}) }}
<div class="row mb-3">
    <div class="col-12">
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <div class="media mt-0">
                {% if material.mainImage %}
                    <div class="mr-3">
                        <a href="{{ absolute_url(asset(material.mainImage.absolutePath)) }}" data-popup="lightbox">
                            <img src="{{ absolute_url(asset(material.mainImage.absolutePath)) }}" width="60" height="60" class="rounded-pill" alt="{{ material.title }}">
                        </a>
                    </div>
                {% endif %}
                <div class="media-body">
                    <div class="custom-file">
                        {{ form_label(form.mainImage) }}
                        {{ form_widget(form.mainImage) }}
                        {{ form_errors(form.mainImage) }}
                        <span class="form-text text-muted">Size: 65 px x 65 px</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-right">
    <button type="submit" class="btn btn-primary">Submit form <i class="icon-paperplane ml-2"></i></button>
</div>
{{ form_end(form) }}