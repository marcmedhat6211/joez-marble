{% extends 'adminTemplate/base.html.twig' %}
{% set page_title %}Categories List{% endset %}
{% block breadcrumb %}
    <a href="{{ path('dashboard') }}" class="breadcrumb-item">
        <i class="icon-home2 mr-2"></i>
        Dashboard
    </a>
    <span class="breadcrumb-item active">Categories List</span>
{% endblock %}
{% block content %}
    <div class="card">
        <div class="px-2 pt-2">
            {% include 'adminTemplate/_flash-messages.html.twig' %}
        </div>
        <div class="card-header d-flex justify-content-end">
            <a href="{{ path('category_new') }}" class="btn btn-primary"><i class="icon-plus-circle2 mr-2"></i>Add
                Category</a>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if paginator is not empty %}
                    {% for category in paginator %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.title }}</td>
                            <td>{{ category.created|date('d/m/Y') }}</td>
                            <td class="text-center">
                                <div class="list-icons">
                                    <div class="dropdown">
                                        <a href="#" class="list-icons-item" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>

                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="{{ path('category_edit', {"id": category.id}) }}"
                                               class="dropdown-item"><i class="mi-mode-edit"></i>Edit</a>
                                            <a href="{{ path('category_delete', {"id": category.id}) }}"
                                               onclick="return confirm('Are you sure you want to remove this category ?')"
                                               class="dropdown-item"><i class="mi-delete-forever"></i>Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center py-3">
            {{ knp_pagination_render(paginator) }}
        </div>
    </div>
{% endblock %}