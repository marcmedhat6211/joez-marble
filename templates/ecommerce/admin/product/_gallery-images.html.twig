<div class="content" id="entity_gallery_images">
    <div class="mb-3">
        <h6 class="mb-0 font-weight-semibold">
            Gallery Images
        </h6>
    </div>

    <div class="row">
        {% set galleryImages = product.galleryImages %}
        {% for image in galleryImages %}
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-img-actions m-1">
                        <img class="card-img img-fluid" src="{{ absolute_url(asset(image.absolutePath)) }}"
                             alt="">
                        <div class="card-img-actions-overlay card-img">
                            <a href="{{ absolute_url(asset(image.absolutePath)) }}"
                               class="btn btn-outline-white border-2 btn-icon rounded-pill" data-popup="lightbox"
                               data-gallery="gallery1">
                                <i class="icon-plus3"></i>
                            </a>
                            <a href="{{ path('image_delete', {"id": image.id, "entityObjectId": product.id, "className": 'App\\ECommerceBundle\\Entity\\Product'}) }}"
                               onclick="return confirm('Are you sure you want to delete this image ?')"
                               class="btn btn-outline-white border-2 btn-icon rounded-pill ml-2 remove-img-btn">
                                <i class="icon-trash"></i>
                            </a>
                        </div>
                    </div>
                    <div class="form-group pt-4">
                        <select class="form-control select-search materials-select" data-fouc data-link="{{ path('') }}">
                            <option value="">Choose a material...</option>
                            {% for material in product.materials %}
                                <option value="{{ material.id }}">{{ material.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>