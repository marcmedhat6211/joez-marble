{{ form_start(form, {'attr':{"data-toggle":"validator", 'novalidate':'novalidate'}}) }}
<div class="row">
    <div class="col-12 col-md-6">
        <div class="form-group">
            {{ form_label(form.code) }}
            {{ form_widget(form.code) }}
            {{ form_errors(form.code) }}
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-group">
            {{ form_label(form.egpEquivalence) }}
            {{ form_widget(form.egpEquivalence) }}
            {{ form_errors(form.egpEquivalence) }}
        </div>
    </div>
    <div class="col-12 col-md-6 mb-3">
        <div class="custom-file">
            {{ form_widget(form.flag) }}
            {{ form_label(form.flag) }}
            {{ form_errors(form.flag) }}
        </div>
    </div>
</div>
<div class="text-right">
    <button type="submit" class="btn btn-primary">Submit form <i class="icon-paperplane ml-2"></i></button>
</div>
{{ form_end(form) }}