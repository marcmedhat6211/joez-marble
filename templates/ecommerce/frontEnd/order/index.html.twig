{% extends 'fe/base.html.twig' %}
{% block title %}{{ 'orders_list_page'|trans }}{% endblock %}
{% import 'fe/_macros.html.twig' as macros %}

{% block content %}

    <div id="orders_page" class="pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-12 mb-4 mb-md-5">
                    <h1 class="page-title text-center">{{ 'orders_txt'|trans }}</h1>
                </div>
                <div class="col-12 mb-4 mb-md-5">
                    {% for order in orders %}
                        {{ macros.order(order) }}
                    {% endfor %}
                </div>
                <div class="col-12 d-flex justify-content-center">
                    {{ knp_pagination_render(orders) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}