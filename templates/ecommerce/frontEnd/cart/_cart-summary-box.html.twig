{% if cart %}
    <div class="cart-summary-container" id="cart_summary">
        <h6 class="box-title">{{ 'summary_txt'|trans }}</h6>
        <div class="box-details">
            <div class="box-info">
                <p class="info-title mb-0">{{ 'items_txt'|trans }}</p>
                <p class="info-value items-number mb-0">{{ cart.totalQuantity }}</p>
            </div>
            <div class="box-info">
                <p class="info-title mb-0">{{ 'subtotal_txt'|trans }}</p>
                <p class="info-value subtotal-amount mb-0">{{ getPriceWithCurrentCurrency(cart.totalPrice) }}</p>
            </div>
            <div class="box-info">
                <p class="info-title mb-0">{{ 'taxes_title_txt'|trans }}</p>
                <p class="info-value taxes-amount mb-0">{{ getPriceWithCurrentCurrency(taxes) }}</p>
            </div>
            <div class="box-info">
                <p class="info-title mb-0">{{ 'shipping_title_txt'|trans }}</p>
                <p class="info-value shipping-amount mb-0">{{ getPriceWithCurrentCurrency(shipping) }}</p>
            </div>
            <div class="box-info">
                <p class="info-title mb-0">{{ 'total_txt'|trans }}</p>
                <p class="info-value cart-total mb-0">{{ getPriceWithCurrentCurrency(cartTotal) }}</p>
            </div>
        </div>
        <a href="{{ path('fe_order_create') }}" class="btn btn-style-1 bg-black hover-effect w-100">
            {{ 'proceed_to_checkout_txt'|trans }}
        </a>
    </div>
{% endif %}