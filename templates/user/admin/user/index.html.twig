{% extends 'adminTemplate/base.html.twig' %}
{% set page_title %}Users List{% endset %}
{% block breadcrumb %}
    <a href="{{ path('dashboard') }}" class="breadcrumb-item">
        <i class="icon-home2 mr-2"></i>
        Dashboard
    </a>
    <span class="breadcrumb-item active">Users List</span>
{% endblock %}
{% block content %}
    <div class="card">
        <div class="px-2 pt-2">
            {% include 'adminTemplate/_flash-messages.html.twig' %}
        </div>
{#        <div class="card-header d-flex justify-content-end">#}
{#            <a href="{{ path('user_new') }}" class="btn btn-primary"><i class="icon-plus-circle2 mr-2"></i>Add#}
{#                User</a>#}
{#        </div>#}
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Last Login</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if paginator is not empty %}
                    {% for user in paginator %}
                        <tr>
                            <td>{{ user.fullName }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.gender ? user.gender : 'n/a' }}</td>
                            <td>{{ user.phone ? user.phone : 'n/a' }}</td>
                            <td>
                                {% if user.enabled %}
                                    <span class="badge badge-success">Active</span>
                                {% else %}
                                    <span class="badge badge-danger">Inactive</span>
                                {% endif %}
                            </td>
                            <td>{{ user.lastLogin|date('d/m/Y') }}</td>
                            <td class="text-center">
                                <div class="list-icons">
                                    <div class="dropdown">
                                        <a href="#" class="list-icons-item" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>

                                        <div class="dropdown-menu dropdown-menu-right">
{#                                            <a href="{{ path('user_edit', {"id": user.id}) }}"#}
{#                                               class="dropdown-item"><i class="mi-mode-edit"></i>Edit</a>#}
                                            <a href="{{ path('user_delete', {"id": user.id}) }}"
                                               onclick="return confirm('Are you sure you want to remove this user ?')"
                                               class="dropdown-item"><i class="mi-delete-forever"></i>Delete</a>
                                            {% if user.enabled %}
                                                <a href="{{ path('user_block', {"id": user.id}) }}"
                                                   onclick="return confirm('Are you sure you want to block this user ?')"
                                                   class="dropdown-item text-danger"><i class="mi-block text-danger"></i>Block</a>
                                            {% else %}
                                                <a href="{{ path('user_enable', {"id": user.id}) }}"
                                                   onclick="return confirm('Are you sure you want to enable this user ?')"
                                                   class="dropdown-item text-success"><i class="mi-lock-open text-success"></i>Enable</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center py-3">
            {{ knp_pagination_render(paginator) }}
        </div>
    </div>
{% endblock %}