{% extends 'fe/base.html.twig' %}
{% block title %}Reset your password{% endblock %}
{% block content %}
    <div id="bg_image_page">
        <div class="container d-flex justify-content-center align-items-center">
            {{ form_start(form, {"attr": {"class": "account-form-container form-validate flex-column w-75"}}) }}
            {% if error is defined and error %}
                <div class="alert bg-danger alert-styled-left">
                    <span class="text-semibold">Oh snap!</span> {{ error.message }}.
                </div>
            {% endif %}
            <div class="form-content w-50">
                <h5 class="form-title">{{ 'password_recovery_txt'|trans }}</h5>
                <div class="form-group input-style-1 w-100">
                    {{ form_widget(form.plainPassword.first) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group input-style-1 w-100">
                    {{ form_widget(form.plainPassword.second) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>
                <div>
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-style-1 bg-black hover-effect">{{ 'change_password_txt'|trans }}</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

